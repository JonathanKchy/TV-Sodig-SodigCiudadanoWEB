                                    </div>
                                </div>

                                <!--correo-->
                                <div class="grupo_input">
                                    <div class="div1">
                                        <input type="email" id="email" name="correo" autocomplete="off" class="input_item" placeholder=" " required="" />

                                        <label for="email" class="label_item">
                                            Ingrese su correo electrónico personal
                                            <span class="label_visto">&#9745</span>
                                        </label>
                                    </div>

                                    <div id="pruebe" class="div2">

                                    </div>

                                </div>

                                <span class="message success">Correo electrónico válido!</span>
                                <span class="message error">Correo electrónico inválido!</span>
                                <div class="text-danger" style="text-align:left">
                                    <label hidden id="mensajeCorreo"></label>
                                </div>


                                <!--correo2-->
