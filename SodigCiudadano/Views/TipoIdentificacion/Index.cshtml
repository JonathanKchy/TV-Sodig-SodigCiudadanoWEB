

@{
    ViewBag.Title = "Tipo de Documento";
}

<div class="container mt-5">
    <div id="wizard" class="pt-5 form_wizard wizard_horizontal">
        <ul class="wizard_steps anchor">
            <li>
                <a href="#step-1" class="disabled" isdone="1" rel="1">
                    <span class="step_no"> <img src="~/Content/images/11.png" width="100%" /></span>
                    <span class="step_descr">
                        Paso 1<br>
                        <small>Formulario</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-3" class="disabled" isdone="1" rel="3">
                    <span class="step_no"> <img src="~/Content/images/21.png" width="100%" /></span>
                    <span class="step_descr">
                        Paso 2<br>
                        <small>Documentos</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-4" class="selected" isdone="1" rel="4">
                    <span class="step_no"> <span class="step_no"> <img src="~/Content/images/3.png" width="100%" /></span></span>
                    <span class="step_descr">
                        Paso 3<br>
                        <small>Validación Identidad</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-4" class="disabled" isdone="1" rel="4">
                    <span class="step_no"> <span class="step_no"> <img src="~/Content/images/41.png" width="100%" /></span></span>
                    <span class="step_descr">
                        Paso 4<br>
                        <small>Pago Online</small>
                    </span>
                </a>
            </li>

        </ul>


        <div class="pt-5">
            <div class="row">
                <div class="col-md-12 pl-5 pr-5">
                    <div>@Html.Partial("~/Views/Shared/_Flash.cshtml")</div>
                </div>
            </div>


            @using (Html.BeginForm("Index", "TipoIdentificacion", FormMethod.Post, new { onsubmit = "return validar()" }))
            {
                <span class="section pb-3 text-left pl-4">Certificado Digital</span>
                <div class="div-registro">
                    <div class="field item  form-group" style="margin-left:1;margin-top:50px">
                        <label class="col-form-label col-md-3 col-sm-3  label-align">Tipo De Documento</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.DropDownList("idTipoIdentificacion", null, "Seleccione Una Opción", htmlAttributes: new { @class = "form-control", @id = "idTipoIdentificacion" })
                        </div>
                        <label id="mensajeTipoIdentificacion" hidden class="col-form-label col-md-3 col-sm-3  alert-danger ">Seleccione el tipo de documento</label>
                    </div>

                    <div class="form-group pt-3" style="margin-left:75%">
                        <div class="col-md-6 offset-md-3">
                            <button type="submit" id="btn-one" class="btn btn-success">Siguiente</button>
                        </div>
                    </div>

                </div>
               
            }
        </div>


    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Script/ScriptTipoIdentificacion.js"></script>
}

