
@{
    ViewBag.Title = "Cargar Archivo";
}
<link href="~/Content/css/Estilos.css" rel="stylesheet" />
<div class="container mt-5">
    <div id="wizard" class="pt-5 form_wizard wizard_horizontal">
        <ul class="wizard_steps anchor">
            <li>
                <a href="#step-1" class="done" isdone="1" rel="1">
                    <span class="step_no">1</span>
                    <span class="step_descr">
                        Paso 1<br>
                        <small>Tipo Solicitud</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-2" class="done" isdone="1" rel="2">
                    <span class="step_no">2</span>
                    <span class="step_descr">
                        Paso 2<br>
                        <small>Tipo Contenedor</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-3" class="done" isdone="1" rel="3">
                    <span class="step_no">3</span>
                    <span class="step_descr">
                        Paso 3<br>
                        <small>Tipo Documento</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-4" class="selected" isdone="1" rel="4">
                    <span class="step_no">4</span>
                    <span class="step_descr">
                        Paso 4<br>
                        <small>Captura Documentos</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-4" class="disabled" isdone="1" rel="4">
                    <span class="step_no">5</span>
                    <span class="step_descr">
                        Paso 5<br>
                        <small>Validación Identidad</small>
                    </span>
                </a>
            </li>

        </ul>
        <div class="pt-5">
            <div class="row">
                <div class="col-md-12 pl-5 pr-5">
                    <div>@Html.Partial("~/Views/Shared/_Flash.cshtml")</div>
                </div>
            </div>


            @using (Html.BeginForm("CapturaCedulaPosteriorArchivo", "CapturaDocumento", FormMethod.Post, new { onsubmit = "return validar()", enctype = "multipart/form-data" }))
            {
                <span class="section pb-3 text-left pl-4">Subir Escaneado Cédula Parte Posterior</span>
                <div class="row">
                    <div class="col-md-12 pt-5" style="text-align:center">
                        <label for="postedFile" style="background:#07577A" class="subir btn text-white btn-icon rounded-pill">
                            <i class="fas fa-cloud-upload-alt"></i> Seleccionar archivo (jpeg, jpg, png, pdf)
                        </label>
                    </div>
                    <div class="col-md-12" style="text-align:left">
                        <input onclick="validarArchivo()" accept=".png, .jpg, .jpeg, .pdf" id="postedFile" name="postedFile" onchange='cambiar()' type="file" style='display: none;' />
                    </div>

                    <div class="col-md-12" style="text-align:center">
                        <div id="info"></div>
                    </div>

                    <div class="col-md-12" style="text-align:center">
                        <label id="mensajeTérmino" style="font-size:14px;" hidden class="col-form-label text-danger  label-align">Por favor, Seleccione un archivo</label>
                    </div>

                    <div class="col-md-12 pt-5 pl-5" style="text-align:center">
                        <button type="submit" id="btn-one" class="btn btn-success">Continuar</button>
                    </div>

                </div>

            }
        </div>


    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Script/scriptCapturaCedulaArchivo.js"></script>
}



