
@{
    ViewBag.Title = "Identificación del solicitante";
}
<link href="~/Content/css/EstilosModal.css" rel="stylesheet" />
<div class="container mt-5">
    <div id="wizard" class="pt-5 form_wizard wizard_horizontal">
        <ul class="wizard_steps anchor">
            <li>
                <a href="#step-1" class="done" isdone="1" rel="1">
                    <span class="step_no">1</span>
                    <span class="step_descr">
                        Paso 1<br>
                        <small>Tipo Solicitud</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-2" class="done" isdone="1" rel="2">
                    <span class="step_no">2</span>
                    <span class="step_descr">
                        Paso 2<br>
                        <small>Tipo Contenedor</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-3" class="done" isdone="1" rel="3">
                    <span class="step_no">3</span>
                    <span class="step_descr">
                        Paso 3<br>
                        <small>Tipo Documento</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-4" class="selected" isdone="1" rel="4">
                    <span class="step_no">4</span>
                    <span class="step_descr">
                        Paso 4<br>
                        <small>Captura Documentos</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-4" class="disabled" isdone="1" rel="4">
                    <span class="step_no">5</span>
                    <span class="step_descr">
                        Paso 5<br>
                        <small>Validación Identidad</small>
                    </span>
                </a>
            </li>

        </ul>


        <div class="pt-5">
            <div class="row">
                <div class="col-md-3 pl-5 pr-5"></div>
                <div class="col-md-6 pl-5 pr-5">
                    <div>@Html.Partial("~/Views/Shared/_Flash.cshtml")</div>
                </div>
            </div>


            @using (Html.BeginForm("Index", "DatosUsuario", FormMethod.Post, new { onsubmit = "return validar()" }))
            {
                <span class="section pb-3 pl-5">Datos del Solicitante</span>
                <div class="field item form-group">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Apellido Paterno</label>
                    <div class="col-md-6 col-sm-6">
                        <input class="form-control" value="@Session["primerApellido"]" readonly />
                    </div>
                </div>
                <div class="field item form-group">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Apellido Materno</label>
                    <div class="col-md-6 col-sm-6">
                        <input class="form-control" value="@Session["segundoApellido"]" readonly />
                    </div>
                </div>
                <div class="field item form-group">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Cédula</label>
                    <div class="col-md-6 col-sm-6">
                        <input class="form-control" value="@Session["numeroIdentificacion"]" readonly />
                    </div>
                </div>

                <div class="field item form-group">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Nombres</label>
                    <div class="col-md-6 col-sm-6">
                        <input class="form-control" value="@Session["primerNombre"] @Session["segundoNombre"]" readonly />
                    </div>
                </div>

                <div class="field item form-group">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Tipo De Identificación</label>
                    <div class="col-md-6 col-sm-6">
                        <input class="form-control" value="@Session["tipoIdentificacion"]" readonly />
                    </div>
                </div>

                <div class="form-group pt-3" style="text-align:right">
                    <div class="col-md-6 offset-md-3">
                        <a onclick="abrirModal()" class="btn btn-primary text-white" style="cursor:pointer">Rechazar</a>
                        <button type="submit" class="btn btn-success">Aceptar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="myModal" id="miModal" name="miModal">
    <div class="flex" id="flex">
        <div class="contenido-modal" style="width: 550px; height:190px;">
            <div class="modal-Titulo flex">
                <h6 id="tituloModal" class="text-white pt-2">Confirmar</h6>
                <span class="cerrarModal" onclick="cerrarModal()" id="cerrarModal">&times;</span>
            </div>
            <div class="modal-Cuerpo">                
                <h5 id="textModal" class="text-center">¿Está Seguro que desea terminar el proceso?</h5>
                <input type="text" id="idTipoElector" name="idTipoElector" hidden />
                <br />
                <div class="row" style="text-align:center">
                    <div class="col-md-12" style="text-align:right">
                        <button onclick="cerrarModal()" type="button"  class="btn btn-primary" >Cancelar</button>
                        <a href="/DatosUsuario/Redireccion" class="btn btn-success">Aceptar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Script/ScriptDatosUsuario.js"></script>
}

