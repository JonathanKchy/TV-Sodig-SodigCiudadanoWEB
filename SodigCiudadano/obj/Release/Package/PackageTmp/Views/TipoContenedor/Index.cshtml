
@{
    ViewBag.Title = "Contenedor";
}

<div class="container mt-5">
    <div id="wizard" class="pt-5 form_wizard wizard_horizontal">
        <ul class="wizard_steps anchor">
            <li>
                <a href="#step-1" class="disabled" isdone="1" rel="1">
                    <span class="step_no"> <img src="~/Content/images/11.png" width="100%" /></span>
                    <span class="step_descr">
                        Paso 1<br>
                        <small>Formulario</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-3" class="selected" isdone="1" rel="3">
                    <span class="step_no"> <img src="~/Content/images/2.png" width="100%" /></span>
                    <span class="step_descr">
                        Paso 2<br>
                        <small>Documentos</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-4" class="disabled" isdone="1" rel="4">
                    <span class="step_no"> <span class="step_no"> <img src="~/Content/images/31.png" width="100%" /></span></span>
                    <span class="step_descr">
                        Paso 3<br>
                        <small>Validación Identidad</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="#step-4" class="disabled" isdone="1" rel="4">
                    <span class="step_no"> <span class="step_no"> <img src="~/Content/images/41.png" width="100%" /></span></span>
                    <span class="step_descr">
                        Paso 4<br>
                        <small>Pago Online</small>
                    </span>
                </a>
            </li>

        </ul>


        <div class="pt-5">
            <div class="row">
                <div class="col-md-12 pl-5 pr-5">
                    <div>@Html.Partial("~/Views/Shared/_Flash.cshtml")</div>
                </div>
            </div>


            @using (Html.BeginForm("Index", "TipoContenedor", FormMethod.Post, new { onsubmit = "return validar()" }))
            {
                <span class="section pb-3  pl-4" style="text-align:center;">Sistema de Registro de Certificado Digital</span>
                <div class="div-registro">
                    <span> Datos personales del solicitante:</span>
                    <div class="field item  form-group" style="margin-top:20px;">
                        <label class="col-form-label col-md-3 col-sm-3  label-align">Tipo De Contenedor</label>
                        <div class="col-md-6 col-sm-6">
                            @Html.DropDownList("idTipoContenedor", null, "Seleccione Una Opción", htmlAttributes: new { @class = "form-control", @id = "idTipoContenedor" })
                        </div>
                        <label id="mensajeTipoContenedor" hidden class="col-form-label col-md-3 col-sm-3  alert-danger ">Seleccione el tipo de contenedor</label>
                    </div>
                    <div class="field item  form-group">
                        <div class="col-md-9 col-sm-9 pt-2 mt-1" style="text-align:right">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="checkTerminos" value=""> Acepto los términos y condiciones
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="field item form-group">
                        <label id="mensajeTérmino" hidden style="font-size:14px;" class="col-form-label col-md-9 col-sm-9 text-danger  label-align">Para continuar con el proceso, es necesario aceptar los términos y condiciones</label>
                    </div>

                    <div class="form-group pt-3" style="margin-left:75%">
                        <div class="col-md-6 offset-md-3">
                            <button type="submit" id="btn-one" class="btn btn-success">Siguiente</button>
                        </div>
                    </div>


                </div>

            }
        </div>


    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Script/ScriptTipoContenedor.js"></script>
}

